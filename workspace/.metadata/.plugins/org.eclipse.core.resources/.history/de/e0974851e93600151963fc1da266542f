package hackerrank;
import java.io.BufferedReader;
import java.io.IOException;
import java.io.InputStreamReader;

public class Junior_Senior_pompom {
		public static void main(String args[]) throws NumberFormatException, IOException
		{
			BufferedReader br=new BufferedReader(new InputStreamReader(System.in));
			double n=Integer.parseInt(br.readLine());
			for(double i=0;i<n;i++)
			{
				String s=br.readLine();
				String st[] = s.split(" ");
				double a=Integer.parseInt(st[0]);
				double b=Integer.parseInt(st[1]);
				double c=Integer.parseInt(st[2]);
				double k=Integer.parseInt(st[3]);
				c=c-k;
				if(a!=1)
				{  
					b=b/a;
					c=c/a;
					a=a/a;
				}
				
				double d= (b*b -4*a*c);
				double root1= (-b + Math.sqrt(d))/2*a;
				double root2= (-b - Math.sqrt(d))/2*a;
				if(root1 < 0 && root2 >0)
					System.out.println(Math.ceil((int)root2));
				else if(root1 > 0 && root2 < 0)
					System.out.println(Math.ceil((int)root1));
				else if(root1 > 0 && root2 >0)
				{
					if(root1 < root2)
						System.out.println(Math.ceil((int)root1));
					else
						System.out.println(Math.ceil((int)root2));
				}
				
				
			}
		}
}
/*
2
3 4 5 6
3 4 5 150
*/