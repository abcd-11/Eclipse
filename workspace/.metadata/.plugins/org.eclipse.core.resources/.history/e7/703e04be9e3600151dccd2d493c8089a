package two_stack_in_a_array;
import java.util.Scanner;

public class Two_stack_in_a_array {
		static int[] arr=new int[20];
		static int first=-1;
		static int second=20;
		public static void main(String args[])
		{
			Scanner sc=new Scanner(System.in);
			System.out.println("Enter the elements for the first stack::");
			String st=sc.nextLine();
			String s[]=st.split(" ");
			int len=s.length;
			for(int i=0;i<len;i++)
			{
				push_stack(1,Integer.parseInt(s[i]));
			}
			st=null;
			
			System.out.println("Enter the elements for the second stack::");
			st=sc.nextLine();
			String s1[]=st.split(" ");
			len=s1.length;
			for(int i=0;i<len;i++)
			{
				push_stack(2,Integer.parseInt(s1[i]));
			}
			while(true)
			{
				System.out.println("Enter 1:push  2:pop 3:peek 4:exit");
				int n=Integer.parseInt(sc.nextLine());
				switch(n)
				{
					case 1:
					{
						System.out.println("Enter the key to be inserted and the stack in which to be inserted::");
						int h=sc.nextInt();
						int w=sc.nextInt();
						sc.nextLine();
						push_stack(w,h);
						break;
					}
					case 2:
					{
						System.out.println("Enter the stack number from which element is to be popped::");
						int h=Integer.parseInt(sc.nextLine());
						pop_stack(h);
						break;
					}
					case 3:
					{
						System.out.println("Enter the stack number from which element is to be peeked::");
						int h=Integer.parseInt(sc.nextLine());
						peek_stack(h);
						break;
					}
					case 4:
					{
						System.exit(0);
					}
				}
			}
			
		}
		public static void push_stack(int stack,int key)
		{
			if(stack==1)
			{
				first++;
				if(first == second)
				{
					System.out.println("Stack Overflow Error");
					return;
				}
				arr[first]=key;
			}
			else
			{
				second--;
				arr[second]=key;
			}
		}
		public static void pop_stack(int stack)
		{
			if(stack ==1)
			{
				System.out.printf("The element popped from 1st stack is::%d",arr[first]);
				first--;
			}
			else
			{
				System.out.printf("the element popped from 2nd stack is::%d",arr[second]);
				second++;
			}
		}
		public static void peek_stack(int stack)
		{
			if(stack ==1)
			{
				System.out.printf("the top element in 1st stack is::%d",arr[first]);
			}
			else
			{
				System.out.printf("the top element in 1st stack is::%d",arr[second]);
			}
		}
}
