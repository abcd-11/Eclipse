package stack_implementation_arrays;
import java.util.Scanner;

public class Stack_using_Arrays {
		static int cn=0;		//cn always points to the next empty location
		static int[] arr=new int[20];
	  public static void main(String args[])
		{
			Scanner sc=new Scanner(System.in);
			while(true)
			{
				System.out.println("Enter 1:Push 2:Pop 3:peek");
				int n=Integer.parseInt(sc.nextLine());
				switch(n)
				{
					case 1:
					{
					System.out.println("Enter the element to be pushed::");
					int key=Integer.parseInt(sc.nextLine());
					if(cn<20)
						{arr[cn]=key;
						cn++;
						}
					else
						System.out.println("Stack Overflow Error");
					break;
					}
					case 2:
					{
						cn--;
						if(cn>=0)
							System.out.println(arr[cn]);
						else
							System.out.println("Stack Underflow Error");
					break;
					}
					case 3:
					{
						if(cn>0)
						System.out.println(arr[cn-1]);
						else
							System.out.println("Stack Underflow Error");
						break;
					}
				}
			}
		}
}
